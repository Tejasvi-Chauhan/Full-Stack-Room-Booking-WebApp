<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <br />
    <h2>Create New Listing</h2>
    <form
      method="post"
      action="/listings/"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="for-label">Title</lable>
        <input
          type="text"
          name="listing[title]"
          placeholder="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">title looks good</div>
        <div class="invalid-feedback">Please enter a title .</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="for-label">Description</lable>
        <input
          type="text"
          name="listing[description]"
          placeholder="description"
          class="form-control"
          required
        />
        <div class="valid-feedback">description looks good</div>
        <div class="invalid-feedback">Please enter a description .</div>
      </div>
      
      <div class="mb-3">
        <lable for="image" class="for-label">Upload Image </lable>
        <input
          type="file"
          name="listing[image]"
          placeholder="give image url"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Upload Image.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="for-label">Price</lable>
          <input
            type="text"
            name="listing[price]"
            placeholder="2100"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="for-label">Country</lable>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="for-label">Location</lable>
        <input
          type="text"
          name="listing[location]"
          placeholder="Jaipur,Ladakh"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <br />

      <button class="btn btn-dark add-btn">Create</button>
    </form>
  </div>
</div>
